FROM continuumio/miniconda3

RUN apt update && apt install -y gcc g++
RUN conda config --append channels conda-forge && conda update conda -y --quiet && conda install python=3.7 cython numpy scipy nose matplotlib pytest coverage flake8 sphinx nbsphinx sphinx_rtd_theme numpydoc jupyter ipython -y --quiet
RUN pip install --upgrade --quiet pip && pip install qutip flake8-colors flake8-docstrings flake8-import-order sphinx_autodoc_typehints
