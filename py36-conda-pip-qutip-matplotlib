FROM continuumio/miniconda3

RUN conda config --append channels conda-forge && conda update conda -y --quiet && conda install python=3.6 matplotlib qutip pytest coverage flake8 sphinx nbsphinx sphinx_rtd_theme numpydoc jupyter ipython -y --quiet && pip install --upgrade --quiet pip
RUN pip install flake8-colors flake8-docstrings flake8-import-order sphinx_autodoc_typehints
